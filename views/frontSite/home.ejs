<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediFind</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/frontSite/home.css">
    <link rel="stylesheet" href="css/frontSite/sidebar.css">
    
</head>
<body>

    <%- include('sidebar.ejs') %>

    <%- include('../includes/flash.ejs') %>

    <div class="header">
        <i class="fa-solid fa-bars" style="color: #ffffff;"></i>
        <p>Home</p>
    </div>

    <div class="advertisment">
        <div class="a"></div>
        <div class="b"></div>
    </div>
    <div class="searchingBox">
        <div class="a">
            <div class="aa">Doctor</div>
            <div class="ab">Medical Center</div>
        </div>

        <!-- //-------------------------------------------------------------------------------------------- -->
        <div class="b">
            <p>LOOK FOR DOCTORS</p>
            <form action="#" method="post">
                <div class="row">
                    <div class="col">
                        <select name="Medicalfield" id="medicalfield" class="colSize">
                            <option value="Medical Field">Medical Field</option>
                            <option value="Ayurveda">Ayurveda</option>
                            <option value="Homeopathic">Homeopathic</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="Department" id="department" class="colSize">
                            <option value="Department">Department</option>
                            <option value="ENT">ENT</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="specialistIn" id="specialistIn" class="colSize">
                            <option value="Specialist In">Specialist In</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-1">
                    <div class="col">
                        <input type="text" name="keyword" placeholder="keyword" class="colSize">
                    </div>
                    <div class="col">
                        <select name="country" id="country" class="colSize">
                            <option value="Country">Country</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="state" id="state" class="colSize">
                            <option value="State">State</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-1">
                    <div class="col">
                        <select name="city" id="city" class="colSize">
                            <option value="City">City</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="location" id="location" class="colSize">
                            <option value="Location">Location</option>
                        </select>
                    </div>
                    <div class="col">
                        <button class="colSize" style="background-color: #0ead6a; color: white;"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i>Search</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- //-------------------------------------------------------------------------------------------- -->
        <div class="b2">
            <p>LOOK FOR MEDICAL CENTER</p>
            <form action="#" method="post">

                <div class="row mt-1 mb-4">
                    <div class="col">
                        <select name="medicalCenter" id="medicalCenter" class="colSize">
                            <option value="Medical Center">Medical Center</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="country" id="country" class="colSize">
                            <option value="Country">Country</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="state" id="state" class="colSize">
                            <option value="State">State</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-1">
                    <div class="col">
                        <select name="city" id="city" class="colSize">
                            <option value="City">City</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="location" id="location" class="colSize">
                            <option value="Location">Location</option>
                        </select>
                    </div>
                    <div class="col">
                        <button class="colSize" style="background-color: #0ead6a; color: white;"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i>Search</button>
                    </div>
                </div>
            </form>
        </div>

    </div>


    <div class="content">
        <p>OUR SPECIALIST</p>
        <div class="a">
            <div>
                <a href="/doctor-listing/?department=Physician"><div class="aaa"><i class="fa-solid fa-user-doctor"></i></div></a>
                <div class="aab">Physician</div>
            </div>
            <div>
                <a href="/doctor-listing/?department=Urology"><div class="aaa"><i class="fa-solid fa-child-reaching"></i></div></a>
                <div class="aab">Urology</div>
            </div>
            <div>
                <a href="/doctor-listing/?department=Orthodonotics"><div class="aaa"><i class="fa-solid fa-child"></i></div></a>
                <div class="aab">Orthodonotics</div>
            </div>
            <div>
                <a href="/doctor-listing/?department=Ophthalmology"><div class="aaa"><i class="fa-solid fa-eye"></i></div></a>
                <div class="aab">Ophthalmology</div>
            </div> 
            <div>
                <a href="/doctor-listing/?department=Paediatrics"><div class="aaa"><i class="fa-solid fa-child"></i></div></a>
                <div class="aab">Paediatrics</div>
            </div>
        </div>
    </div>

    <div class="content2">
        <div class="aa">
            <p>AYURVEDA</p>
            <a href="/doctor-listing?department=AYURVEDA"><p>SEE ALL</p></a>
        </div>

        <div class="a">

            <% for(let i=data.length-1; i>=0; i--){ %>

                <% if(data[i].department=='AYURVEDA' ) { %>

            <div>
                <div class="photo"><img src="<%=data[i].photo.url%>" alt="doctor image"></div>
                <div class="docInfo">
                    <a href="/doctor/<%=data[i]._id%>"><p style="font-weight: bold;">Dr.<%=data[i].name%></p></a>
                    <p><%=data[i].specialisation%></p>
                    <p><%=data[i].contactNumber%></p>
                    <p>Available : <%=data[i].active%> </p>
                    <% if(data[i].price!=null){ %>
                    <p style="color: #dac218;">$<%=data[i].price%></p>
                    <% } %>
                </div>
            </div>

                <% } %>
            <% } %>    

        </div>
    </div>


