<%  if((success && success.length)){  %>
    <div class="alert alert-info alert-dismissible fade show col-6 offset-3" style="z-index: 2; position: absolute; top: 2px;" role="alert">
        <%=success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<%  if((error && error.length)){  %>
    <div class="alert alert-info alert-dismissible fade show col-6 offset-3" style="z-index: 2; position: absolute; top: 2px;" role="alert">
        <%=error%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>